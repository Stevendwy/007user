/* pages/list/index.wxss */
.list-head{
  width:calc(100% - 2px);
  overflow: auto;
  display: flex;
  justify-content: center;
}

.list-list{
  width: 100%;
  overflow: hidden;
  padding-top: 20px;
}
.list-list-content{
  background: #FFFFFF;
  border: 1px solid #D8D8D8;
  width: 90%;
  padding: 10px 5%;
  display:flex;
}

.list-left{
  width: 80%;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #333333;
}
.list-right{
  width: 20%;
  display: inline-flex;
  justify-content:center;
  align-items:center;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #666666;
}